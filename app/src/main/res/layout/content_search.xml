<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pratik.mynavapp.Activity.SearchActivity"
    tools:showIn="@layout/activity_search">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:text="@string/title_select_loc"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/text_margin" />

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownSelector="@android:drawable/arrow_down_float"></Spinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:text="@string/title_mode_of_trasport"
            android:textColor="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_xl"
                android:drawableTop="@drawable/ic_car"
                android:text="@string/title_car"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="center_horizontal" />


            <TextView
                android:id="@+id/textView_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_xl"
                android:drawableTop="@drawable/ic_train"
                android:text="@string/title_train"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="center_horizontal" />
        </LinearLayout>





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_mountain" />
    </LinearLayout>


</LinearLayout>
